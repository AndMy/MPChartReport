<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/login_content_cstl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <ImageView
        android:id="@+id/login_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_logo_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/zhmm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号密码登录"
        android:textColor="@color/c716F6A"
        app:layout_constraintTop_toBottomOf="@id/login_logo_iv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        android:textSize="18dp"/>
    <EditText
        android:id="@+id/login_account_et"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/zhmm_tv"
        app:layout_constraintLeft_toLeftOf="@id/login_go_tv"
        app:layout_constraintRight_toRightOf="@id/login_go_tv"
        android:hint="请输入账号"
        android:textColor="@color/c232322"
        android:textSize="16dp"
        android:background="@drawable/shape_rec_border_white"
        android:layout_marginTop="55dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/login_account_et"
        app:layout_constraintLeft_toLeftOf="@id/login_go_tv"
        app:layout_constraintRight_toRightOf="@id/login_go_tv"
        android:hint="请输入密码"
        android:textColor="@color/c232322"
        android:textSize="16dp"
        android:background="@drawable/shape_rec_border_white"
        android:layout_marginTop="19dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:inputType="textPassword"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        />
    <TextView
        android:id="@+id/login_go_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:textColor="@color/white"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:background="@mipmap/login_btn_click"
        app:layout_constraintTop_toBottomOf="@id/login_password_et"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="18dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>