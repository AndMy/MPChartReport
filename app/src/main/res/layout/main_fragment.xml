<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="医患对话报表"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_item_right"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimary"/>
    <TextView
        android:id="@+id/main_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_item_tv"
        android:text="@string/app_name"
        android:background="@drawable/shape_rec_white"
        android:layout_marginRight="15dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>