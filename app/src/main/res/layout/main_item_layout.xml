<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_rec_white"
    >
    <TextView
        android:id="@+id/main_item_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="医患对话报表"
        android:textSize="@dimen/text_big_size"
        android:textColor="@color/c5"
        android:textStyle="bold"
        android:paddingLeft="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/main_item_right"
        />
    <TextView
        android:id="@+id/main_item_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textSize="30dp"
        android:textColor="@color/c5"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/main_item_tv"
        app:layout_constraintBottom_toBottomOf="@id/main_item_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_item_tv"
        android:layout_marginRight="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>